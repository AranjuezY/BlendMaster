@model string

@{
    var src = Model == "Menu" ? "~/images/down_glasses.JPG" : "~/images/chat.JPG";
}

<div class="bar-image">
    <!-- Add your bar image here -->
    <img src="@Url.Content(src)" alt="Bar Image" class="img-fluid w-100" />
</div>

<style>
    .bar-image {
        position: relative;
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

        .bar-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>
