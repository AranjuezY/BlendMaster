@model List<WebApplication2.Entities.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<div class="container mt-5">
    @foreach (var recipe in Model)
    {
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="card-title">@recipe.Name</h2>
                <a asp-controller="Admin" asp-action="RecipeDetail" asp-route-id="@recipe.RecipeId" class="btn btn-primary mt-3">View Details</a>
            </div>
            <div class="card-body">
                <h5>Status: @recipe.Status</h5>
                <h5>Tags</h5>
                <ul class="list-inline">
                    @foreach (var tag in recipe.Tags)
                    {
                        <li class="list-inline-item">"@tag"</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>